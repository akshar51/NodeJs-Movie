<%- include('../partials/header.ejs')%>

<div class="main-panel">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar bar1"></span>
          <span class="icon-bar bar2"></span>
          <span class="icon-bar bar3"></span>
        </button>
        <a class="navbar-brand" href="#">Add Trailer </a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right"></ul>
      </div>
    </div>
  </nav>

  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-8 col-md-7">
          <div class="card">
            <div class="header">
              <h4 class="title fw-bold">Create Trailer :</h4>
            </div>
            <div class="content">
              <form method="post" action="/createTrailer" enctype="multipart/form-data">
                <div class="row">
                  <div class="col-md-6">
                    <!-- title -->
                    <div class="mb-4">
                      <label for="title" class="form-label"
                        >Trailer Title:
                      </label>
                      <input
                        class="form-control border-input"
                        type="text"
                        id="title"
                        name="title"
                      />
                    </div>

                    <!-- description -->
                    <div class="form-group">
                      <label>Trailer Description : </label>
                      <textarea
                        name="description"
                        id="description"
                        class="form-control border-input"
                      ></textarea>
                    </div>

                    <!-- Url -->
                     <div class="mb-4">
                      <label for="youtubeUrl" class="form-label"
                        >Trailer URL:
                      </label>
                      <input
                        class="form-control border-input"
                        type="text"
                        id="youtubeUrl"
                        name="youtubeUrl"
                      />
                    </div>

                    <!-- Thumbnail -->
                    <div class="mb-4">
                      <label for="thumbnail" class="form-label"
                        >Trailer Thumbnail:
                      </label>
                      <input
                        class="form-control border-input"
                        type="file"
                        id="thumbnail"
                        name="thumbnail"
                      />
                    </div>
            
                  </div>
                </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-success btn-fill btn-wd">
                    Add trailer
                  </button>
                </div>
                <div class="clearfix"></div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <table class="table table-responsive">
            <thead>
              <tr>
                <th>Sr No.</th>
                <th>Thumbnail</th>
                <th>Title</th>
                <th>Description</th>
                <th>URL</th>
              </tr>
            </thead>
            <tbody>
              <% trailer.map((t,i)=>{ %>
                <tr>
                  <td><%= i+1 %></td>
                  <td>
                    <img src="<%= t.thumbnail %>" alt="" width="70" height="70">
                  </td>
                  <td><%= t.title %></td>
                  <td><%= t.description %></td>
                  <td><%= t.youtubeUrl %></td>
                  <td>
                    <a href="/deleteTrailer/<%= t.id %>" class="btn btn-danger">Delete</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer.ejs')%>
</div>
